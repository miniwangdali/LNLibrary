<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookdetail" 
    android:orientation="vertical"  
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  >
    <TextView android:id="@+id/save"
        android:gravity="center"  
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="是不是得加入书库才能下载呢？" />
    <LinearLayout 
        android:orientation="vertical" 
        android:background="@drawable/customlayout" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        style="@style/CustomLayout">
        <com.victor.lnlibrary.ui.ExpandableTextView android:id="@+id/introduction"
            android:ellipsize="end"  
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            app:expanded="false" 
            app:minLines="3" />
    </LinearLayout>
    <ListView android:id="@+id/dossierlist" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" />
</LinearLayout>
