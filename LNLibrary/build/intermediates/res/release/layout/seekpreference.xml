<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/CustomLayout" >
    <TextView android:id="@+id/pref_title"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:paddingLeft="3dp"
        android:textSize="19sp"
        android:text="标题"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <ImageView android:id="@+id/decline"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxHeight="10dp"
            android:src="@drawable/minusselector"
            android:scaleType="centerInside" />
        <EditText android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@android:color/transparent" />
        <ImageView android:id="@+id/plus"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxHeight="10dp"
            android:src="@drawable/plusselector"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>
